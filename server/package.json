{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "npx sequelize-cli db:migrate",
    "generate-migration": "npx sequelize-cli migration:generate --name",
    "migrate-undo": "npx sequelize-cli db:migrate:undo",
    "migrate-undo-all": "npx sequelize-cli db:migrate:undo:all",
    "generate-seed": "npx sequelize-cli seed:generate --name",
    "seed": "npx sequelize-cli db:seed:all",
    "seed-undo": "npx sequelize-cli db:seed:undo",
    "seed-undo-all": "npx sequelize-cli db:seed:undo:all",
    "test": "jest",
    "test:integration": "docker-compose up -d && (NODE_ENV=test CONF=./test.config.yml node --no-node-snapshot ./node_modules/.bin/jest --forceExit --testMatch '**/*.integration.test.[jt]s?(x)' || true) && docker-compose down"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.5",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.2",
    "supertest": "^7.0.0"
  },
   "jest": {
    "testEnvironment": "node"
  }
}
